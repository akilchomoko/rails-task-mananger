<div class="container">
  <h1><%= @task.title %></h1>
  <div class="details">
    <p><%= @task.details %></p>
  </div>
    <div>
      <input type="checkbox" id="task" name="task" <%= @task.completed ? "checked" : "" %> >
      <label for="task"><%= @task.completed ? "Task completed" : "Task not completed" %></label>
    </div>
    <%= link_to "Back to list", tasks_path %>
    <%= link_to "Edit task", edit_task_path(@task.id) %>
</div>
